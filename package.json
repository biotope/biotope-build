{
  "name": "@biotope/build",
  "version": "8.0.0-alpha",
  "description": "An advanced development and build runtime to create frontent ecosystems",
  "repository": {
    "type": "git",
    "url": "https://github.com/biotope/biotope-build.git"
  },
  "author": "Biotope",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "engineStrict": true,
  "scripts": {
    "start": "npm run clean && npm run copy:preview && tsc --watch",
    "build": "npm run clean && npm run copy:preview && tsc",
    "copy:preview": "cpy --parents --cwd=src tasks/previewApp/dev-preview ../dist",
    "clean": "rimraf dist",
    "release": "np --no-yarn",
    "test": "npm run test:code && npm run lint",
    "test:code": "jest",
    "lint": "biotope-quality-gate -p ./src/*.ts,./src/tasks",
    "lint:fix": "biotope-quality-gate -p ./src/*.ts,./src/tasks --fix"
  },
  "dependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-classes": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-typescript": "^7.3.3",
    "autoprefixer": "^9.6.1",
    "console-emoji": "0.0.2",
    "cpx": "^1.5.0",
    "ejs": "^2.7.1",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.4",
    "handlebars": "^4.2.0",
    "live-server": "^1.2.1",
    "node-sass": "^4.12.0",
    "open": "^6.4.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.18.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-scss": "^1.0.2",
    "rollup-plugin-typescript": "^1.0.1",
    "typescript": "^3.5.3"
  },
  "devDependencies": {
    "@biotope/quality-gate": "^1.0.0-beta.10",
    "@types/autoprefixer": "^9.5.0",
    "@types/jest": "^24.0.18",
    "@types/rimraf": "^2.0.2",
    "cpy-cli": "^2.0.0",
    "jest": "^24.9.0",
    "np": "~5.0.3",
    "ts-jest": "^24.0.2"
  }
}
