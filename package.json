{
  "name": "@biotope/build",
  "version": "8.0.0-alpha",
  "description": "An advanced development and build runtime to create frontent ecosystems",
  "author": "Biotope",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/biotope/biotope-build.git"
  },
  "engines": {
    "node": ">=10.15.0"
  },
  "bin": {
    "biotope-build": "lib/index.js"
  },
  "scripts": {
    "clean": "rimraf ./lib",
    "build": "npm run clean && npm run build:require && tsc --project tsconfig.json",
    "build:require": "tsc --project tsconfig.require.json && uglifyjs lib/require.js --wrap window -m -b -o lib/require.js && uglifyjs lib/require.js -c -o lib/require.min.js",
    "lint": "biotope-quality-gate -p src,types,require,plugins",
    "start": "npm run build",
    "watch": "npm run build:require && tsc --project tsconfig.json --watch"
  },
  "dependencies": {
    "@babel/core": "~7.7",
    "@babel/plugin-proposal-class-properties": "~7.7",
    "@babel/plugin-transform-classes": "~7.7",
    "@babel/plugin-transform-object-assign": "~7.7",
    "@babel/preset-env": "~7.7",
    "@babel/preset-typescript": "~7.7",
    "@types/autoprefixer": "~9.6",
    "@types/fs-extra": "~8.0",
    "@types/rimraf": "~2.0",
    "autoprefixer": "~9.7",
    "chokidar": "~3.3",
    "commander": "~4.0",
    "console-emoji": "~0.0",
    "cpy": "~8.0",
    "deepmerge": "~4.2",
    "dotenv": "~8.2",
    "fs-extra": "~8.1",
    "get-port": "~5.0",
    "glob": "~7.1",
    "handlebars": "~4.5",
    "local-web-server": "~3.0",
    "magic-string": "^0.25.4",
    "node-sass": "~4.13",
    "open": "~7.0",
    "postcss": "~7.0",
    "reduce-flatten": "~3.0",
    "rimraf": "~3.0",
    "rollup": "~1.27",
    "rollup-plugin-babel": "~4.3",
    "rollup-plugin-commonjs": "~10.1",
    "rollup-plugin-image-base64": "~1.0",
    "rollup-plugin-livereload": "~1.0",
    "rollup-plugin-node-resolve": "~5.2",
    "rollup-plugin-postcss": "~2.0",
    "rollup-plugin-scss": "~1.0",
    "rollup-plugin-svg": "~2.0",
    "rollup-plugin-terser": "~5.1",
    "rollup-plugin-typescript2": "~0.25",
    "set-value": "~3.0",
    "typescript": "~3.7"
  },
  "devDependencies": {
    "@biotope/quality-gate": "~1.0",
    "uglify-js": "~3.7"
  }
}
